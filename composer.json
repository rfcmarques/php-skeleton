{
  "name": "rfcmarques/php-skeleton",
  "description": "A PHP skeleton project",
  "type": "project",
  "authors": [
    {
      "name": "Rui Marques",
      "email": "rui.marques1997@gmail.com"
    }
  ],
  "autoload": {
    "psr-4": {
      "Core\\": "Core/",
      "App\\": "App/"
    },
    "files": [
      "Core/Helpers/Debug.php",
      "Core/Helpers/Path.php",
      "Core/Helpers/Views.php",
      "Core/Helpers/Format.php",
      "Core/Helpers/Http.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "require-dev": {
    "pestphp/pest": "^4.1"
  },
  "config": {
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  }
}
